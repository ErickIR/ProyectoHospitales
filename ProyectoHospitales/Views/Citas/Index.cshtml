@model IEnumerable<ProyectoHospitales.Citas>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Citas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    { 
<p>
   <br /> Cedulas Medico: @Html.DropDownList("StringSearch", new SelectList(ViewBag.cedulas))
    <input type="submit" value="Filter" />
</p> 

    }

    <table class="table">
        <tr>
            <th>
                Hospitales
            </th>
            <th>
                Medico
            </th>
            <th>
                Paciente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Agendada)
            </th>
            <th>
                Hora
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospitales.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicos.Nombre, item.Medicos.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pacientes.Nombre, item.Pacientes.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Agendada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora_Completa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_Cita }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_Cita }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_Cita })
                </td>
            </tr>
        }

    </table>
